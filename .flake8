[flake8]
# Configuração para tolerância de linha mais longa
max-line-length = 120

# Ignorar alguns erros específicos que são comuns em projetos Python
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504   # line break after binary operator

# Excluir diretórios que não precisam ser verificados
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    .pytest_cache,
    node_modules

# Configurações adicionais
per-file-ignores = 
    __init__.py:F401  # Ignorar imports não utilizados em __init__.py